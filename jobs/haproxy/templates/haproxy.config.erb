    acl <%= acl["acl_name"] %> <%= acl["acl_rule"] %>
        <%- if acl.key?("negate") && acl["negate"] -%>
          <%- acl_names=acl_names+"!"+acl["acl_name"]+" " -%>
        <%- else %>
          <%- acl_names=acl_names+acl["acl_name"]+" " -%>
        <%- end -%>
